---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout>
  <article>
    <header>
      <h2>Recuperación de Contraseña</h2>
    </header>
    <form>
      <label>Ingrese su Email:</label>
      <input type='email' name='email' required /><br />
      <button onclick="window.location.href='/login'">Enviar Instrucciones</button>
    </form>
  </article>
</BaseLayout>

<style>
    h2 {
    margin-bottom: 0;
  }

  article {
    margin-top: 4rem;
  }
</style>
